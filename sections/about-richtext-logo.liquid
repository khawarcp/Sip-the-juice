<link rel="stylesheet" href="{{ 'about-richtext-logo.css' | asset_url }}">

{%- style -%}
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
      }
    
      @media screen and (min-width: 1440px) {
        .section-{{ section.id }}-padding {
          padding-top: {{ section.settings.padding_top }}px;
          padding-bottom: {{ section.settings.padding_bottom }}px;
        }
      }
    
      @media screen and (max-width: 1199px) {
        .section-{{ section.id }}-padding {
          padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
        }
      }
  {%- endstyle -%}

<section class="section-{{ section.id }}-padding richtext-wrapper {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
    data-cascade
    {% endif %}>
    <div class="page-width">
       <div class="richtext-logo-blocks">
            {% if section.settings.logo_image != blank %}
            <div class="richtext-logo-wrapper">                
                    <img src="{{ section.settings.logo_image | image_url }}" alt="{{ section.settings.logo_image.alt }}" width="86" height="72" loading="lazy">
            </div>
            {% endif %}
            <div class="richtext-content">
               <div class="richtext-content-inner">
                {{ section.settings.text }}
               </div>
            </div>
       </div>
    </div>
</section>




{% schema %}
{
    "name": "Richtext With Logo",
    "settings": [
        {
            "type": "image_picker",
            "id": "logo_image",
            "label": "Logo Image"
        },
        {
            "type": "richtext",
            "id": "text",
            "label": "Text"
        },
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 80
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 80
        }     
    ],
    "presets": [
        {
            "name": "Richtext With Logo"
        }
    ]
}
{% endschema %}